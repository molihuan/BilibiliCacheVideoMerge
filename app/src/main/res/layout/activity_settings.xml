        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relal_choose_complete_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_complete_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义完成路径:"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tv_show_complete_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="@color/mlh_Grey500"
                android:textSize="16dp"
                android:layout_toRightOf="@id/tv_complete_path"
                />



